<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/logo_blue"
        app:layout_constraintBottom_toTopOf="@+id/lnlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/lnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ln_login_google"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_border_rectangle"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_login_google"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_gmail"
                android:clickable="false"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/txt_login_google"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:duplicateParentState="true"
                android:fontFamily="@font/montserrat_black"
                android:gravity="center"
                android:text="Login con google"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_login_anonimo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_border_rectangle"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_login_anonimo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/hombe_anonimo"
                android:clickable="false"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/txt_login_anonimo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_black"
                android:clickable="true"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text="Ir sin registro"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>